<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Pavel Korobko" id="Create-table-card">
        <preConditions>
            <not>
                <tableExists tableName="PATIENT_CARD"/>
            </not>
        </preConditions>
        <createTable tableName="PATIENT_CARD">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="full_name" type="VARCHAR(250)">
                <constraints nullable="false"/>
            </column>
            <column name="dob" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="home_address" type="VARCHAR(250)">
            </column>
            <column name="num_site" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="complaints" type="VARCHAR(1000)">
            </column>
            <column name="anamnesis" type="VARCHAR(1000)">
            </column>
            <column name="conditions" type="VARCHAR(1000)">
            </column>
            <column name="diagnosis" type="VARCHAR(250)">
            </column>
            <column name="recommendations" type="INT(1)" defaultValue="0">
            </column>
            <column name="signature_doc" type="INT(1)" defaultValue="0">
            </column>
            <column name="signature_chief" type="INT(1)" defaultValue="0">
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Pavel Korobko" id="Create-table-recipe">
        <preConditions>
            <not>
                <tableExists tableName="RECIPE"/>
            </not>
        </preConditions>
        <createTable tableName="RECIPE">
            <column name="num" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="preparation" type="VARCHAR(1000)">
            </column>
            <column name="status" type="INT(1)" defaultValue="0">
            </column>
            <column name="note" type="VARCHAR(1000)">
            </column>
            <column name="card_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="Pavel Korobko" id="Create-table-role">
        <preConditions>
            <not>
                <tableExists tableName="ROLE"/>
            </not>
        </preConditions>
        <createTable tableName="ROLE">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="Pavel Korobko" id="Create-table-user">
        <preConditions>
            <not>
                <tableExists tableName="user"/>
            </not>
        </preConditions>
        <createTable tableName="user">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="login" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="INT(1)" defaultValue="1">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="int">
                <constraints nullable="false" foreignKeyName="FK_USER_ROLE" references="ROLE(id)"/>
            </column>
        </createTable>
    </changeSet>



